@model AplicacionWeb.Models.ViewModelCompraVacuna
@{
    ViewBag.Title = "Lista de Compras";
}

<!DOCTYPE html>
<html lang="es">
<body>
    <main>
        <small>Mutualistas / <em> compras de vacunas </em></small>
        <div id="tableEmpleados">
            <table>
                <thead>
                    <tr>
                        <th>Mutualista</th>
                        <th>Nombre Vacuna</th>
                        <th>Precio Unitario</th>
                        <th>Monto Compra</th>
                        <th>Fecha Compra</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CompraVacunasMutualista.Count() > 0)
                    {
                        foreach (var item in Model.CompraVacunasMutualista)
                        {
                            <tr>
                                <th>@item.Mutualista.Nombre</th>
                                <th>@item.Vacuna.Nombre</th>
                                <th>$ @item.Vacuna.Precio</th>
                                <th>$ @item.Monto</th>
                                <th>@item.Fecha</th>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><th colspan="15">No hay datos disponible</th></tr>
                    }
                </tbody>
            </table>
        </div>
        <small>Mutualista / <em> datos </em></small>
        <div id="tableEmpleados">
            <table>
                <thead>
                    <tr>
                        <th>Compras disponibles</th>
                        <th>Monto autorizado para compras</th>
                        <th>Saldo disponible</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CompraVacunasMutualista.Count() > 0)
                    {
                        <tr>
                            <th>@Model.ComprasDisponibles</th>
                            <th>$ @Model.MontoAutorizado</th>
                            <th>$ @Model.SaldoDisponible</th>
                        </tr>
                    }
                    else
                    {
                        <tr><th colspan="15">No hay datos disponible</th></tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>


